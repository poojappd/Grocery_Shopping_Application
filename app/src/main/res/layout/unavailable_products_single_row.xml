<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/unavailable_product_image"
            android:src="@drawable/ic__skin_care_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Britannia toast Tea 250g"
            android:textSize="14dp"
            android:id="@+id/unavailable_product_title"
            app:layout_constraintStart_toEndOf="@+id/unavailable_product_image"
            app:layout_constraintBottom_toBottomOf="@+id/unavailable_product_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintVertical_bias="0.202" />

    <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/grey_divider"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/unavailable_product_image" />
</androidx.constraintlayout.widget.ConstraintLayout>