<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/otp_dialog_bg"
    android:id="@+id/constraintLayout"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:clipToOutline="true"
    android:layout_width="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center_horizontal"
        android:text="Fetching Otp"

        android:textSize="25dp"
        app:fontFamily="@font/noto_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminateTint="#d0c3fb"

        android:indeterminate="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:progressDrawable="@drawable/sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/otp_4"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/otp_1"
        app:layout_constraintTop_toBottomOf="@+id/otp_2"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textview.MaterialTextView
        android:background="@drawable/otp_input_background"

        android:id="@+id/otp_1"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/otp_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:background="@drawable/otp_input_background"
        android:id="@+id/otp_2"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/otp_3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/otp_1"
        app:layout_constraintTop_toBottomOf="@id/materialTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:background="@drawable/otp_input_background"
        android:id="@+id/otp_3"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/otp_4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/otp_2"
        app:layout_constraintTop_toBottomOf="@id/materialTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:background="@drawable/otp_input_background"
        android:id="@+id/otp_4"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/otp_3"
        app:layout_constraintTop_toBottomOf="@id/materialTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>


