<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/bg_categ_img"
            android:layout_width="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"
            android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/homepage_image_categores_layout_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            >


        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/categ_image_homepage"
                android:paddingTop="10dp"

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="start|bottom"
                android:src="@drawable/snacks_icon_1"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/categ_title_homepage"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/categ_title_homepage"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:paddingBottom="10dp"
                android:paddingHorizontal="5dp"
                android:text="Cleaning and \nHousehold"
                android:lineSpacingMultiplier="1.16"
                android:layout_gravity="end"
                android:maxWidth="70dp"
                android:gravity="center"
                android:textColor="#3C2B5C"
android:textStyle="bold"
                android:fontFamily="@font/palanquin_dark"
                android:textSize="22sp"
                android:lineSpacingExtra="-5dp"
                app:layout_constraintTop_toBottomOf="@id/categ_image_homepage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>