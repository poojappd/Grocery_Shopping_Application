<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

    <FrameLayout
            android:id="@+id/bg_categ_img"
            android:visibility="visible"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp"
            android:background="@drawable/homepage_image_categores_layout_bg"
            app:layout_constraintHorizontal_bias="0.405">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/categ_image_homepage"
                android:layout_marginEnd="8dp"

                android:layout_width="200dp"
                android:layout_height="200dp"

android:layout_gravity="right"
                android:src="@drawable/snacks_icon_1"
                app:shapeAppearanceOverlay="@style/roundedImageView"

                />



        <TextView
                android:id="@+id/categ_title_homepage"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cleaning and Household"
                android:layout_gravity="top"
                android:maxWidth="70dp"
                android:gravity="start|center"
                android:textColor="#3C2B5C"
                android:fontFamily="@font/palanquin_dark_medium"
                android:textStyle="bold"
                android:textSize="15sp"
                android:lineSpacingExtra="-13dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>