<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.UserNameFormFragment"
        android:background="@color/surfaceColortintedGreyishSlightBlue">


    <com.google.android.material.textview.MaterialTextView
            android:gravity="center"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="25dp"
            android:fontFamily="@font/cabin"
            app:layout_constraintStart_toStartOf="@+id/materialTextView4"
            app:layout_constraintEnd_toEndOf="@+id/materialTextView4"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/materialTextView3"
            app:layout_constraintVertical_chainStyle="spread"
            android:layout_marginTop="124dp" />

    <com.google.android.material.textview.MaterialTextView
            android:gravity="center"

            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:text="Help us get to know you more"
            android:textSize="16dp"
            android:fontFamily="@font/cabin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView3"
            android:id="@+id/materialTextView4" />
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_marginTop="68dp"
            android:layout_marginHorizontal="30dp"
app:errorEnabled="true"
            android:id="@+id/fname_signUp"
app:boxStrokeWidth="0dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView4">

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fname_signUp_et"
            android:layout_width="match_parent"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="40"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_edittext_bg"
            android:backgroundTint="@color/surface_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Your first name"
android:textSize="16sp"
            android:fontFamily="@font/cabin"
            android:paddingStart="20dp"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView4" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/lName_signUp"
            app:boxStrokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@+id/fname_signUp"
            android:layout_marginTop="34dp">


    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:hint="Your last name"
            android:maxLength="40"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:background="@drawable/signup_edittext_bg"
            android:backgroundTint="@color/surface_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/lName_signUp_et"
            app:layout_constraintTop_toBottomOf="@+id/fname_signUp"
          />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/proceedButton_signUp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:textColor="@color/textInverseBW"
            android:textStyle="bold"
            android:fontFamily="@font/cabin"
            android:textSize="20sp"
            android:text="Get Started!"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/lName_signUp"
            app:layout_constraintStart_toStartOf="@+id/lName_signUp"
            app:layout_constraintTop_toBottomOf="@+id/lName_signUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.205" />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/signup_proceedbutton_bg"
            app:layout_constraintStart_toStartOf="@+id/proceedButton_signUp"
            app:layout_constraintEnd_toEndOf="@+id/proceedButton_signUp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/proceedButton_signUp"
            android:layout_marginTop="52dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>