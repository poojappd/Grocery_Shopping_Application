<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryShoppingApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primaryColor</item>
        <item name="colorPrimaryVariant">#927BC5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#A1C0FB</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="fontFamily">@font/cabin</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnSurface">@color/primary_color</item>

        <!--this customizes the hint font of the EditText-->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>

        <!--this changes the helper text font-->
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>

        <!--this is to change the shape of the MDC EditText-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>



    </style>

    <style name="TextAppearance.AppCompat.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="recentSearchStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/otp_dialog_bg</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/recentSearchGrey</item>

    </style>

    <style name="TextAppearance.App.TrendingSearch" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cabin</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/otp_dialog_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:backgroundTint">@color/primary_surfaceColorTinted</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="UserNameFormEditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
<!--        <item name="searchIcon">@drawable/ic_search</item>-->

        <!-- Gets rid of the "underline" in the text -->
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="android:backgroundTint">#2D685BA1</item>
        <item name="android:background">@drawable/otp_dialog_bg</item>
        <item name="queryBackground">@color/black</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="colorControlNormal">#FFFFFF</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_hint</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Subtitle1</item>
    </style>
    <style name="TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/app_primaryColor</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/surface_color</item>
    </style>

    <style name="dividerCOlor" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:background">@color/error_color</item>
    </style>
    <style name="fontFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fontFamily">@font/palanquin_dark</item>
        <item name="textAllCaps">true</item>
        <item name="android:backgroundTint">@color/fabColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint"> @color/white</item>
    </style>

    <style name="OrderIdFont" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
    </style>
    <style name="collapsingToolbarOrderSummary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>